{
  "name": "Python Training",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/pip:1": {}
  },
  "postCreateCommand": "pip install -r module-1-python-env-setup/requirements.txt",
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      },
      "extensions": [
      "ms-python.python",             // Core Python support
      "ms-python.vscode-pylance",     // Fast IntelliSense & type checking
      "ms-toolsai.jupyter",           // Jupyter notebook support (optional)
      "ms-python.black-formatter",    // Black code formatter
      "ms-python.flake8",             // Flake8 linter
      "ms-python.isort",              // Import sorting
      "ms-python.pylint"              // Pylint linter (alternative to Flake8)
    ]
    }
  }
}